@model IEnumerable<WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}
<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid">
        <partial name="MenuPartial" />

        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-warning" href="/Admin/ad">Quản lí trang web</a>
        }
    </div>
</nav>



<div class ="container-fluid">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://file.vnua.edu.vn/data/31/images/2024/03/11/infolib/sach2.jpg?w=680" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.hoanghamobile.com/tin-tuc/wp-content/uploads/2023/08/nhung-cau-noi-hay-ve-sach-7.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.hoanghamobile.com/tin-tuc/wp-content/uploads/2023/08/nhung-cau-noi-hay-ve-sach-6.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
    </div>
    
    </div>
<div class="slider-frame">
    <div class="slider">
        <h2 style="text-align: center; margin-bottom: 20px;">Sách Được Yêu Thích Nhiều Nhất</h2>
        <div class="love" style="display: flex; flex-wrap: nowrap; overflow-x: auto; gap: 20px; padding: 10px;">

            @foreach (var item in Model.OrderByDescending(p => p.TotalLikes).Take(5))
            {
                <a asp-controller="Home" asp-action="Detail" class="lovedetail" asp-route-id="@item.Id" style="text-decoration: none;">
                    <div class="loveall card" style="flex: 0 0 auto; width: 200px;">
                        <div class="loveimg p-3">
                            <img src="@item.ImageUrl" width="50px" height="50px" style="border-radius: 50%;">
                        </div>
                        <div class="lovenameandlike" style="text-align: center;">
                            <p style="font-weight: bold; margin-bottom: 5px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Name">@item.Name</p>
                            <p style="color: #888;"><i class="bi bi-heart-fill"></i> Like: @item.TotalLikes</p>
                        </div>
                    </div>
                </a>
            }

        </div>
    </div>
</div>


    <partial name="ProductsByCategory" />
</div>
