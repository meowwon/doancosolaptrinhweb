@model IEnumerable<WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}
<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid">
        <partial name="MenuPartial" />
    </div>
</nav>



<div class ="container-fluid">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://file.vnua.edu.vn/data/31/images/2024/03/11/infolib/sach2.jpg?w=680" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.hoanghamobile.com/tin-tuc/wp-content/uploads/2023/08/nhung-cau-noi-hay-ve-sach-7.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.hoanghamobile.com/tin-tuc/wp-content/uploads/2023/08/nhung-cau-noi-hay-ve-sach-6.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
    </div>
    
    </div>
<div class="slider-frame">
    <div class="slider">
        <h2 style="text-align: center; margin-bottom: 20px;">Sách Được Yêu Thích Nhiều Nhất</h2>
        <div class="love" style="display: flex; flex-wrap: nowrap; overflow-x: auto; gap: 20px; padding: 10px;">

            @foreach (var item in Model.OrderByDescending(p => p.TotalLikes).Take(5))
            {
                <a asp-controller="Home" asp-action="Detail" class="lovedetail" asp-route-id="@item.Id" style="text-decoration: none;">
                    <div class="loveall card" style="flex: 0 0 auto; width: 200px;">
                        <div class="loveimg p-3">
                            <img src="@item.ImageUrl" width="50px" height="50px" style="border-radius: 50%;">
                        </div>
                        <div class="lovenameandlike" style="text-align: center;">
                            <p style="font-weight: bold; margin-bottom: 5px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Name">@item.Name</p>
                            <p style="color: #888;"><i class="bi bi-heart-fill"></i> Like: @item.TotalLikes</p>
                        </div>
                    </div>
                </a>
            }

        </div>
    </div>
</div>
<div>
    <div class="container">
        <div class="d-flex justify-content-end align-items-center my-3">
            <h3 class="mr-3 mb-0">Bộ lọc theo giá trị sách :</h3>
            <a asp-controller="Home" asp-action="SortByPriceAsc" method="post" class="btn btn-light">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="black" class="bi bi-sort-up" viewBox="0 0 16 16">
                    <path d="M3.5 12.5a.5.5 0 0 1-1 0V3.707L1.354 4.854a.5.5 0 1 1-.708-.708l2-1.999.007-.007a.5.5 0 0 1 .7.006l2 2a.5.5 0 1 1-.707.708L3.5 3.707zm3.5-9a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z" />
                </svg>
            </a>
            <a asp-controller="Home" asp-action="giamPriceAsc" method="post" class="btn btn-light ml-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="black" class="bi bi-sort-down" viewBox="0 0 16 16">
                    <path d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z" />
                </svg>
            </a>
        </div>
    </div>
    <partial name="ProductsByCategory" />
</div>
